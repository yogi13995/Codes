#include<stdio.h>

int main()
{
int i,x,t;
long long int y,p;
scanf("%d",&t);
	for(i=0;i<t;i++)
	{	
		scanf("%d %lld",&x,&y);
		p=1;
		while(p<=y)
		{	
			
			p=y%x;
		
			
			if(p==0)
			{
			y=y/x;
				if(y==x)
				{
					printf("%d\n",1);
					break;
				}
			}
			else if(p!=0)
			{
			
			printf("%d\n",0);
			break;
			}
			
		}
	}
return 0;
}
			
